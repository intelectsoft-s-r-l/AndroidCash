    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_1"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="1"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_delete"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_delete"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="del"
        android:textColor="#202020"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_0"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="0"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_clear"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_delete"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_clear"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="CE"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_4"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="4"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_7"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="7"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csl_input_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_2"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="2"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_0"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_3"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_5"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="5"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_6"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_8"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="8"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_9"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_7"
        app:layout_constraintTop_toBottomOf="@id/csl_input_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_3"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="3"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_6"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="6"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_9"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="9"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_8"
        app:layout_constraintTop_toBottomOf="@id/csl_input_data" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_items"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:background="@drawable/shape_green_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnClose_add_item"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_clear_white_36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView104"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:text="Category"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCategory_name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:textColor="@color/design_default_color_on_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView104" />

        <TextView
            android:id="@+id/tvName_finded_item"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory_name_item" />

        <View
            android:id="@+id/divider11"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvName_finded_item" />

        <LinearLayout
            android:id="@+id/ll_regular_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ll_disc_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider11">

            <TextView
                android:id="@+id/textView107"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REGULAR PRICE"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_price_add_item"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:text="MDL 0.00"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_disc_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_regular_price">

            <TextView
                android:id="@+id/textView109"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DISCOUNT PRICE"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_discount_price_add_item"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="MDL 0.00"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_input_data"
        android:layout_width="398dp"
        android:layout_height="70dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_items">

        <TextView
            android:id="@+id/et_input_data"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:maxLength="13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider14"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_code_barcode"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Code or Barcode"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider14"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_search_barcode_add_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider14"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_search_black_48dp" />

        <ImageButton
            android:id="@+id/btn_add_item_to_bill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/divider14"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home_black_36dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>