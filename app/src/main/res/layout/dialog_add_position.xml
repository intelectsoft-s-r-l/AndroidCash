<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:background="@drawable/background_button_payment"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_position_clear"
        app:layout_constraintStart_toEndOf="@+id/btn_ok"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_ok"
        style="@android:style/Widget.DeviceDefault.Light.Button.Toggle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_button_payment"
        android:gravity="center"
        android:text="OK"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintStart_toStartOf="@+id/btn_add_position_delete"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_delete" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Add position"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_input_data"
        app:layout_constraintEnd_toEndOf="@+id/et_input_data"
        app:layout_constraintStart_toStartOf="@+id/et_input_data"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/et_input_data"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView2"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="true"
        android:focusedByDefault="true"
        android:background="@drawable/edit_text_rame"
        android:gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_7"
        app:layout_constraintEnd_toEndOf="@+id/btn_add_position_9"
        app:layout_constraintStart_toStartOf="@+id/btn_add_position_7"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_1"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="1"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_delete"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_delete"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_button_payment"
        android:drawableStart="@drawable/arrow_down_white_36dp"
        android:gravity="center"
        android:text="d"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_0"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_button_payment"
        android:text="0"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_clear"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_delete"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_clear"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/background_button_payment"
        android:text="C"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="4"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_1"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_7"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_4"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="2"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_0"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_3"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_5"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="5"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_2"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_6"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_8"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="8"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_5"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_position_9"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_7"
        app:layout_constraintTop_toBottomOf="@+id/et_input_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_3"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="3"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_6"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="6"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_position_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_position_9"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_button_payment"
        android:text="9"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_position_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_add_position_8"
        app:layout_constraintTop_toBottomOf="@+id/et_input_data" />

</androidx.constraintlayout.widget.ConstraintLayout>