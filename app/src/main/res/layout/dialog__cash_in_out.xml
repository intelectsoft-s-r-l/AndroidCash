<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_1"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="1"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_dot"
        app:layout_constraintEnd_toStartOf="@+id/calculator_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_dot"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="."
        android:textColor="#202020"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calculator_0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_0"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="0"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_okey"
        app:layout_constraintStart_toEndOf="@+id/calculator_dot"
        app:layout_constraintTop_toBottomOf="@+id/calculator_2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_okey"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="OK"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_0"
        app:layout_constraintTop_toBottomOf="@+id/calculator_3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_4"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="4"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_1"
        app:layout_constraintEnd_toStartOf="@+id/calculator_5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculator_7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_7"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="7"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_4"
        app:layout_constraintEnd_toStartOf="@+id/calculator_8"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csl_input_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_2"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="2"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_0"
        app:layout_constraintEnd_toStartOf="@+id/calculator_3"
        app:layout_constraintStart_toEndOf="@+id/calculator_1"
        app:layout_constraintTop_toBottomOf="@+id/calculator_5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_5"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="5"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_2"
        app:layout_constraintEnd_toStartOf="@+id/calculator_6"
        app:layout_constraintStart_toEndOf="@+id/calculator_4"
        app:layout_constraintTop_toBottomOf="@+id/calculator_8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_8"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="8"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_5"
        app:layout_constraintEnd_toStartOf="@+id/calculator_9"
        app:layout_constraintStart_toEndOf="@+id/calculator_7"
        app:layout_constraintTop_toBottomOf="@id/csl_input_data" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_3"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="3"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_okey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_2"
        app:layout_constraintTop_toBottomOf="@+id/calculator_6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_6"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="6"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_5"
        app:layout_constraintTop_toBottomOf="@+id/calculator_9" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculator_9"
        style="@style/Widget.MaterialComponents.CustomButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:insetTop="1dp"
        android:insetBottom="1dp"
        android:text="9"
        android:textColor="#202020"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/calculator_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calculator_8"
        app:layout_constraintTop_toBottomOf="@id/csl_input_data" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_green_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnClose_dialog"
            style="@android:style/Widget.Holo.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_clear_white_36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="16dp"
            android:text="Cash in"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/csl_input_data"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_items">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/calculator_value"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_horizontal|center_vertical"
            android:lines="1"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/calculator_backspace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/calculator_backspace"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_backspace_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>